# .kv file for box layout task;
# added modification:
# button 1 = clear button
# button 2 = user text input box
# button 3 = greet button

BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    Button:
        text: 'Clear'
        on_press: app.handle_clear()
    TextInput:
        id: input_name
        text: ''
    Button:
        text: 'Greet'
        on_press: app.handle_greet()
    Label:
        id: output_label
        text: 'Enter Your Name'
        color: (1, 1, 0, 1)
