BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            text: ''
            # for Part 2
#            on_text: app.handle_calculate()
        BoxLayout:
            size_hint_x: 0.40
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    # For part 1
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate()

    Label:
        id: output_label
        text: app.output_km
        color: (1, 1, 0, 1)
